extends layout

block content

  h4.mt-4= title

  form(method="POST" action="")
    .form-group
      label(for="username") User Name
      input.form-control(type="text" name="username" required=true placeholder="nylonhusk")

    if errors
      ul.text-danger
        for error in errors
          li!= error.msg

    .form-group
      label(for="password") Password
      input.form-control(type="password" name="password" required=true placeholder="********")

    p.text-danger #{message}

    button.btn.btn-primary Login

  hr
  p No account yet?
  button.btn.btn-success
    a(href="/signup" style="text-decoration: none; color: white") Sign Up