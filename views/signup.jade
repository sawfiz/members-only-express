extends layout

block content

  h4.mt-4= title

  form(method="POST" action="")
    .form-group
      label(for="firstName") First Name
      input.form-control(type="text" name="firstName" required=true placeholder="Nylon")
    .form-group
      label(for="lastName") Last Name
      input.form-control(type="text" name="lastName" required=true placeholder="Husk")
    .form-group
      label(for="username") User Name
      input.form-control(type="text" name="username" required=true placeholder="nylonhusk")
    .form-group
      label(for="password") Password
      input.form-control(type="text" name="password" required=true placeholder="********")
    .form-group
      label(for="password1") Confirm Password
      input.form-control(type="text" name="password1" required=true placeholder="********")
    if error
      p.text-danger #{error}
    button.btn.btn-primary Sign Up
